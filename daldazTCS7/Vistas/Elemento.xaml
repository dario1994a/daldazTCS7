<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="daldazTCS7.Vistas.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR /  ELIMINAR" FontSize="20"/>
            <Entry x:Name="txtNombre" Placeholder="NOMBRE"/>
            <Entry x:Name="txtUsuario" Placeholder="USUARIO"/>
            <Entry x:Name="txtContraseña" Placeholder="CONTRASEÑA"/>

            <Button x:Name="btnActualizar" Text="ACTUALIZAR" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="ELIMINAR" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>